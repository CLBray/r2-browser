{
  "name": "r2-file-explorer-worker",
  "version": "1.0.0",
  "description": "Cloudflare Worker API for R2 File Explorer",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --env development",
    "dev:remote": "wrangler dev --remote --env development",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run src/**/*.test.ts",
    "test:integration": "vitest run src/integration.test.ts",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "logs": "wrangler tail",
    "logs:staging": "wrangler tail --env staging",
    "logs:production": "wrangler tail --env production",
    "setup:secrets": "./scripts/setup-secrets.sh",
    "setup:secrets:local": "./scripts/setup-secrets.sh local",
    "setup:secrets:staging": "./scripts/setup-secrets.sh staging",
    "setup:secrets:production": "./scripts/setup-secrets.sh production",
    "generate:key": "node -e \"console.log(require('crypto').randomBytes(32).toString('base64'))\"",
    "setup:resources": "echo 'Creating R2 bucket...' && wrangler r2 bucket create file-explorer-storage-dev && echo 'Creating KV namespace...' && wrangler kv:namespace create KV_SESSIONS",
    "clean": "rm -rf node_modules dist .wrangler && npm install"
  },
  "dependencies": {
    "@tsndr/cloudflare-worker-jwt": "^3.2.0",
    "hono": "^4.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.4.5",
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "wrangler": "^4.25.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
